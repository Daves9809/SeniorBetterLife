<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        tools:layout="@layout/fragment_login"
        android:id="@+id/loginFragment"
        android:name="com.example.seniorbetterlife.fragments.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_register"
            app:destination="@id/register" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_register"
        android:id="@+id/register"
        android:name="com.example.seniorbetterlife.fragments.registration.RegisterFragment"
        android:label="Register" />
</navigation>